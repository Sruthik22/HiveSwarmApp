<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hiveswarm.hiveswarm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="hiveswarm.hiveswarm.App"
        android:allowBackup="true"
        android:icon="@drawable/bee"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="hiveswarm.hiveswarm.GeneralObservationsActivity" />
        <activity android:name="hiveswarm.hiveswarm.EnvironmentalConditions" />
        <activity android:name="hiveswarm.hiveswarm.PestsDiseases" />
        <activity android:name="hiveswarm.hiveswarm.EggQueenObservations" />
        <activity android:name="hiveswarm.hiveswarm.Feeding" />
        <activity android:name="hiveswarm.hiveswarm.SetAlarm" />
        <activity android:name="hiveswarm.hiveswarm.MainActivity" />
        <activity android:name="hiveswarm.hiveswarm.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hiveswarm.hiveswarm.SingleItemView"></activity>
    </application>

</manifest>